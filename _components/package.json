{
  "name": "tachyons-components",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "component-playground": "^2.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.1.4",
    "@storybook/addon-options": "^3.1.2",
    "@storybook/react": "^3.1.3",
    "react-scripts": "1.0.7",
    "tachyons": "^4.7.0"
  },
  "homepage": "/tachyons-components/",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "rm -rf ../tachyons-components/static && cp -fR ./build/* ../tachyons-components && echo \"---\nlayout: null\n---\n$(cat ../tachyons-components/index.html)\" > ../tachyons-components/index.html",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "clean-storybook": "rm -rf ../components/",
    "build-to-dist": "cp -fR ./storybook-static/* ../components && echo \"---\nlayout: null\n---\n$(cat ../components/index.html)\" > ../tachyons-components/index.html",
    "deploy-storybook": "npm run build-storybook && npm run clean-storybook && npm run build-to-dist"
  }
}
